<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pefectendgame"
    tools:context="com.example.p180111.perfectnote.EndGame">

    <Button
        android:id="@+id/idplayagain"
        android:background="@drawable/button_shape_homescreen"
        android:layout_width="108dp"
        android:layout_height="109dp"
        android:text="Play Again?"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="162dp"
        android:layout_marginRight="126dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/idHome"
        android:layout_width="108dp"
        android:layout_height="109dp"
        android:layout_marginRight="126dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_shape_homescreen"
        android:text="Go Home"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idplayagain" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="201dp"
        android:layout_height="121dp"
        android:background="@drawable/youwin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginRight="79dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
